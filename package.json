{
  "name": "spa-with-node",
  "private": false,
  "dependencies": {
    "concurrently": "^5.1.0",
    "npm-run-all": "^4.1.5"
  },
  "scripts": {
    "setup": "run-s install-client-deps install-server-deps",
    "dev": "concurrently --kill-others 'yarn dev-client' 'yarn dev-server'",
    "install-client-deps": "yarn --cwd ./client",
    "install-server-deps": "yarn --cwd ./server",
    "dev-server": "yarn --cwd ./client start",
    "dev-client": "yarn --cwd ./server start:dev"
  }
}
